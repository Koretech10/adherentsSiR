{% extends ea.templatePath('layout') %}

{% block content_title %}Liste des adhérents de Switch in Reims{% endblock %}

{% block main %}
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<div class="col-12 table-responsive">
    <table class="table datagrid">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date d'expiration</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
                {# @var \App\Entity\Member member #}
                <tr>
                    <td class="text-nowrap">{{ member.nickname }}</td>
                    <td class="text-nowrap">{{ member.lastName }}</td>
                    <td class="text-nowrap">{{ member.firstName }}</td>
                    <td class="text-nowrap">{{ member.expirationDate|date('d/m/Y') }}</td>
                    <td>
                        <button
                            onclick='clear()'
                            name="id"
                            value="{{ member.id }}"
                            type="button"
                            class="clickable load-card btn btn-primary"
                            data-toggle="modal"
                            data-target=".card-modal"
                        >
                            Carte d'adhérent
                        </button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="modal fade text-left card-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body" id="modal">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('.load-card').click(function(event){
            var id = $(this).val();
            $.get("{{ ea_url().setRoute('member_card_show') }}",{'id_ad': id}, function(data, text){
                $('#modal').html(data);
            });
        });
    });
</script>
{% endblock %}