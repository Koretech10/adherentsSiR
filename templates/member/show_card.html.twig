<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Josefin Sans', sans-serif;
}

.container {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.card {
    width: 500px;
    height: 300px;
    color: #fff;
    cursor: pointer;
    perspective: 1000px;
}

.card-inner {
    width: 100%;
    height: 100%;
    position: relative;
    transition: transform 1s;
    transform-style: preserve-3d;
}

.front {
    width: 100%;
    height: 100%;
    background-color: #ED1C24;
    position: absolute;
    top: 0;
    left: 0;
    padding: 20px 30px;
    border-radius: 15px;
    overflow: hidden;
    z-index: 1;
    backface-visibility: hidden;
}

.back {
    width: 100%;
    height: 100%;
    background-color: #ED1C24;
    position: absolute;
    top: 0;
    left: 0;
    padding: 20px 30px;
    border-radius: 15px;
    overflow: hidden;
    z-index: 1;
    backface-visibility: hidden;
}

.img-logo {
    position: absolute;
    top: 20px;
    left: 20px;
    width: 90px;
}

.img-pseudo {
    position: absolute;
    top: 70px;
    left: 200px;
    width: 200px;
}

.card-info {
    margin-top: 150px;
    font-size: 14px;
}

.back {
    transform: rotateY(180deg);
}

.card:hover .card-inner {
    transform: rotateY(-180deg);
}

.map-img {
    width: 150px;
    margin: 20px auto;
}
</style>
    <div class="container">
        <div class="card">
            <div class="card-inner">
                <div class="front">
                    <div class="row card-info">
                        <p><b>{{ member.nickname }} (#{{ member.id }})</b></p>
                        <p>{{ member.firstName }} {{ member.lastName|capitalize }}</p>
                        <p>EXPIRE LE {{ member.expirationDate|date('d/m/Y') }}</p>
                    </div>
                    <div class="row card-img">
                        {% if avatar %}
                            <img src="{{ asset(avatar) }}" class="img-pseudo" />
                        {% endif %}
                    </div>
                    <div class="row card-logo">
                        <img src="{{ asset('img/sir_logo_white.png') }}" class="img-logo" />
                    </div>
                </div>
                <div class="back">
                    <div class="row card-logo">
                        <img src="{{ asset('img/sir_logo_white.png') }}" class="map-img" />
                    </div>
                </div>
            </div>
        </div>
    </div>
